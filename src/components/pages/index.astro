---
// Layouts
import Layout from '@/Layouts/Layout.astro';

// Components
import Text from '@/components/ui/Text.astro';
import Text2 from '@/components/ui/Text2.astro';
import Divisor from '@/components/ui/Divisor.astro';
import Project from '@/components/sections/Project.astro';
import WorkExperience from '@/components/sections/WorkExperience.astro';
import Social from '@/components/ui/Social.astro';
import Tech from '@/components/sections/Tech.astro';

// Lenguaje
import { useLocale } from '@/hooks/useLocale';
const { t } = useLocale(Astro);

// Logo optimizado
import { Image } from 'astro:assets';
import IconoBlanco from '@/assets/Images/Logos/Icono-Blanco.webp';
---

<Layout
	title={`AnderCMD | ${t('Nav.Index')}`}
	description={t('About.Description')}
	keywords='Full Stack Developer, Software Engineer, Web Developer, React Developer, Astro Developer'>
	<!-- Hero Section -->
	<section class='flex items-center justify-center max-xl:flex-col gap-12 lg:gap-20 py-12 lg:py-20 min-h-[60vh]'>
		<div class='relative group animate-float'>
			<div
				class='absolute inset-0 bg-linear-to-r from-sky-400 to-blue-500 rounded-full blur-3xl opacity-20 group-hover:opacity-30 transition-opacity duration-500'>
			</div>
			<Image
				data-logo-theme='icono'
				id='IconoLogoTheme'
				src={IconoBlanco}
				alt='AnderCMD Logo'
				class='relative w-64 h-64 lg:w-80 lg:h-80 drop-shadow-2xl transform group-hover:scale-105 transition-transform duration-500 rounded-full will-change-auto'
				width={320}
				height={320}
				loading='eager'
				decoding='async'
				fetchpriority='high'
			/>
		</div>
		<div class='flex-1 max-w-3xl'>
			<Text
				icon=''
				title={t('About.Title')}
				subtitle={t('About.Subtitle')}
				description={t('About.Description')}
			/>
		</div>
	</section>

	<!-- Social Links -->
	<section class='py-8 animate-slide-up'>
		<Social />
	</section>

	<Divisor />

	<!-- Work Experience Section -->
	<section class='py-12 space-y-8 animate-fade-in'>
		<div class='text-center space-y-4'>
			<Text2
				icon='fa-solid fa-briefcase'
				title={t('WorkExperience.Title')}
				subtitle=''
				description={t('WorkExperience.Description')}
			/>
		</div>
		<WorkExperience limit={3} showViewAll={true} />
	</section>

	<Divisor />

	<!-- Tech Stack Section -->
	<section class='py-12 space-y-8 animate-fade-in'>
		<div class='text-center space-y-4'>
			<Text2
				icon='fa-solid fa-laptop-code'
				title={t('Tech.Title')}
				subtitle=''
				description={t('Tech.Description')}
			/>
		</div>
		<Tech />
	</section>

	<Divisor />

	<!-- Projects Section -->
	<section class='py-12 space-y-8 animate-fade-in'>
		<div class='text-center space-y-4'>
			<Text2
				icon='fa-solid fa-diagram-project'
				title={t('Projects.Title')}
				subtitle=''
				description={t('Projects.Description')}
			/>
		</div>
		<Project />
	</section>
</Layout>
