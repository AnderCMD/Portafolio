---
// Layouts
import Layout from '../Layouts/Layout.astro';

// Componentes
import AButton from '../Components/Common/AButton.astro';

// Lenguaje
import { useLocale } from '../Hooks/useLocale';
const { t } = useLocale(Astro);
---

<Layout title={`AnderCMD | ${t('Error.Message.404')}`}>
	<main class='flex flex-col justify-center gap-4'>
		<section class='flex flex-col gap-12 items-center'>
			<i class='fa-solid fa-triangle-exclamation text-9xl text-amber-500 dark:text-amber-400'
			></i>
			<div>
				<h3 class='text-2xl font-bold max-2xl:text-center text-amber-500 dark:text-amber-400'>{t('Error.Title.404')}</h3>
				<h1 class='text-4xl font-bold text-center'>
					{t('Error.Message.404')}
				</h1>
			</div>
			<AButton texto={t('Error.Button.404')} href='/' />
		</section>
		<main></main>
	</main>
</Layout>
