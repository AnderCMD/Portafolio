---
// Tipos de datos de los props
interface Props {
	title: string;
}

// Props
const { title } = Astro.props;

// Componentes
import SquareLines from '../Components/Common/Square/SquareLines.astro';
import Navbar from '../Components/Common/Navbar.astro';
import Footer from '../Components/Common/Footer.astro';

// Font Awesome 6
import '../Assets/FontAwesome/css/all.css';

// Lenguaje
import { useLocale } from '../Hooks/useLocale';
const { currentLocale, t } = useLocale(Astro);

// import { ClientRouter } from 'astro:transitions';
---

<html lang={currentLocale}>
	<head>
		<!-- Metas -->
		<meta charset='UTF-8' />
		<meta name='description' content={t('About.Description')} />
		<meta name='viewport' content='width=device-width' />
		<meta name='generator' content={Astro.generator} />
		<meta name='robots' content='index, follow' />
		<link rel='canonical' href={Astro.url} />
		<!-- Open Graph -->
		<meta property='og:title' content={title} />
		<meta property='og:description' content={t('About.Description')} />
		<meta property='og:url' content={Astro.url} />
		<meta property='og:type' content='website' />

		<!-- title & Icono -->
		<title>{title}</title>
		<link rel='icon' type='image/svg+xml' href='/Icons/Icono-Negro.ico' />
	</head>

	<body class='bg-white dark:bg-slate-950 text-slate-950 dark:text-slate-100'>
		<div class='flex flex-col justify-between h-screen'>
			<SquareLines />
			<Navbar />
			<div
				class='flex flex-col p-8 mx-60 max-lg:mx-40 max-md:mx-20 max-sm:mx-4 gap-10'>
				<!-- <ClientRouter /> -->
				<slot />
			</div>
			<Footer />
		</div>

		<!-- Flowbite-->
		<script
			is:inline
			src='https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js'
		></script>
	</body>
</html>
