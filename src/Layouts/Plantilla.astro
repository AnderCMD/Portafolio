---
// Tipos de datos de los props
interface Props {
	Titulo: string;
}

// Props
const { Titulo } = Astro.props;

// Componentes
import SquareLines from '../Components/Common/Square/SquareLines.astro';
import Navbar from '../Components/Common/Navbar.astro';
import Footer from '../Components/Common/Footer.astro';

// Font Awesome 6
import '../Assets/FontAwesome/css/all.css';

// Lenguaje
import { useLocale } from '../Hooks/useLocale';
const { currentLocale } = useLocale(Astro);
---

<!doctype html>
<html lang={currentLocale}>
	<head>
		<!-- Metas -->
		<meta charset='UTF-8' />
		<meta name='description' content='Astro description' />
		<meta name='viewport' content='width=device-width' />
		<meta name='generator' content={Astro.generator} />

		<!-- Titulo & Icono -->
		<title>{Titulo}</title>
		<link rel='icon' type='image/svg+xml' href='/Icons/Icono-Blanco.ico' />
	</head>
	<body class='bg-white dark:bg-neutral-950 text-neutral-950 dark:text-neutral-100'>
		<div class="flex flex-col justify-between h-screen">
			<SquareLines />
			<Navbar />
			<div class="flex container mx-auto p-4 justify-center">
				<slot />
			</div>
			<Footer />
		</div>

		<!-- Flowbite-->
		<script
			is:inline
			src='https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js'
		></script>
	</body>
</html>
