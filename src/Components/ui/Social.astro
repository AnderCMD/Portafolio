---
import { useLocale } from '@/hooks/useLocale';
import { socialLinks } from '@/data/socials';
const { t } = useLocale(Astro);
---

<section class='flex flex-col md:flex-row items-center justify-center md:justify-between gap-6 md:gap-8'>
	<!-- CV Download Button -->
	<a
		href={t('About.CV.Link')}
		class='group inline-flex items-center gap-3 px-8 py-4 font-bold text-white rounded-2xl bg-linear-to-r from-sky-500 to-blue-600 hover:from-sky-600 hover:to-blue-700 shadow-lg shadow-sky-500/50 hover:shadow-xl hover:shadow-sky-500/60 transition-all duration-300 transform hover:scale-105 active:scale-95'
		download>
		<i class='fa-solid fa-download text-lg group-hover:animate-bounce'></i>
		<span>{t('About.CV')}</span>
		<i class='fa-solid fa-arrow-down text-sm opacity-70 group-hover:opacity-100 transition-opacity'></i>
	</a>

	<!-- Social Links -->
	<nav class='flex flex-wrap items-center justify-center gap-4 md:gap-5' aria-label='Redes sociales'>
		{
			socialLinks.map((social) => (
				<a
					href={social.href}
					aria-label={social.label}
					target='_blank'
					rel='noopener noreferrer'
					class={`group relative flex items-center justify-center w-12 h-12 rounded-xl bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300 ${social.color} transition-all duration-300 transform hover:scale-110 hover:shadow-lg active:scale-95`}>
					<i class={`${social.icon} text-2xl group-hover:scale-110 transition-transform duration-300`} />
					<span class='absolute -bottom-8 left-1/2 -translate-x-1/2 px-2 py-1 text-xs font-medium text-white bg-slate-900 dark:bg-slate-700 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap pointer-events-none'>
						{social.label}
					</span>
				</a>
			))
		}
	</nav>
</section>
