---
interface Props {
	icon: string;
	title: string;
	subtitle: string;
	description: string;
	animation?: 'fade' | 'slide' | 'none';
	titleClass?: string;
	subtitleClass?: string;
}

const {
	icon,
	title,
	subtitle,
	description,
	animation = 'fade',
	titleClass = 'text-transparent bg-clip-text bg-gradient-to-r to-emerald-500 from-cyan-500 dark:to-emerald-400',
	subtitleClass = 'text-transparent bg-clip-text bg-gradient-to-r to-cyan-500 from-emerald-500 dark:to-cyan-400',
} = Astro.props;

const animationClass =
	animation === 'fade' ? 'animate-fade-in' : animation === 'slide' ? 'animate-slide-in-bottom' : '';
---

<section class={`flex flex-col items-center gap-4 ${animationClass}`} role='region' aria-label={title}>
	<i class={icon + ' text-3xl text-sky-500 dark:text-sky-400 hover:scale-110 transition-transform duration-300'}></i>
	<div>
		<h1 class='text-2xl font-extrabold text-center text-slate-900 dark:text-white md:text-3xl lg:text-4xl'>
			<span class={titleClass}>{title}</span>
		</h1>
		<h2 class='mb-4 text-xl font-extrabold text-center text-slate-900 dark:text-white md:text-2xl lg:text-3xl'>
			<span class={subtitleClass}>{subtitle}</span>
		</h2>
	</div>
	<p class='text-lg font-normal text-slate-600 lg:text-xl dark:text-slate-300 max-w-prose'>
		{description}
	</p>
</section>

<style>
	.animate-fade-in {
		animation: fadeIn 0.8s ease-in;
	}

	.animate-slide-in-bottom {
		animation: slideInBottom 0.6s ease-out;
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	@keyframes slideInBottom {
		from {
			transform: translateY(20px);
			opacity: 0;
		}
		to {
			transform: translateY(0);
			opacity: 1;
		}
	}
</style>
