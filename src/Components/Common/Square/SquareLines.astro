---
import SquareLine from '@/Components/Common/Square/SquareLine.astro';
---

<!-- Grid moderno de fondo con animaciones -->
<div class='fixed inset-0 w-full h-full pointer-events-none' style='z-index: -1;'>
	<!-- Capa de gradiente overlay -->
	<div class='absolute inset-0 bg-linear-to-b from-transparent via-transparent to-slate-50/50 dark:to-slate-950/50'>
	</div>

	<!-- Grid izquierdo -->
	<div class='absolute top-0 left-0 w-1/2 h-full overflow-hidden'>
		<!-- Gradiente de fade -->
		<div
			class='absolute inset-0 z-30 w-full h-full pointer-events-none bg-linear-to-tl from-slate-50 dark:from-slate-950 from-40% via-80% to-100% via-transparent to-transparent'>
		</div>

		<!-- Efecto glow sutil -->
		<div
			class='absolute top-0 left-0 w-64 h-64 bg-sky-500/5 dark:bg-sky-400/5 rounded-full blur-3xl animate-pulse-slow'>
		</div>

		<!-- Grid lines -->
		<div
			class='flex flex-col w-full h-full border-t border-l border-slate-200/40 dark:border-slate-700/30 divide-y divide-slate-200/30 dark:divide-sky-700/20'>
			<SquareLine />
			<SquareLine />
			<SquareLine />
			<SquareLine />
			<SquareLine />
			<SquareLine />
			<SquareLine />
			<SquareLine />
		</div>
	</div>

	<!-- Grid derecho -->
	<div class='absolute top-0 right-0 w-1/2 h-full overflow-hidden'>
		<!-- Gradiente de fade -->
		<div
			class='absolute inset-0 z-30 w-full h-full pointer-events-none bg-linear-to-tr from-slate-50 dark:from-slate-950 from-40% via-80% to-100% via-transparent to-transparent'>
		</div>

		<!-- Efecto glow sutil -->
		<div
			class='absolute top-0 right-0 w-64 h-64 bg-blue-500/5 dark:bg-blue-400/5 rounded-full blur-3xl animate-pulse-slow'
			style='animation-delay: 1s;'>
		</div>

		<!-- Grid lines -->
		<div
			class='flex flex-col w-full h-full border-t border-r border-slate-200/40 dark:border-slate-700/30 divide-y divide-slate-200/30 dark:divide-sky-700/20'>
			<SquareLine />
			<SquareLine />
			<SquareLine />
			<SquareLine />
			<SquareLine />
			<SquareLine />
			<SquareLine />
			<SquareLine />
		</div>
	</div>

	<!-- Efecto de partÃ­culas flotantes -->
	<div class='absolute inset-0 overflow-hidden'>
		<div class='absolute top-1/4 left-1/4 w-2 h-2 bg-sky-500/20 dark:bg-sky-400/20 rounded-full animate-float'>
		</div>
		<div
			class='absolute top-1/3 right-1/3 w-1.5 h-1.5 bg-blue-500/20 dark:bg-blue-400/20 rounded-full animate-float'
			style='animation-delay: 2s;'>
		</div>
		<div
			class='absolute bottom-1/4 left-1/3 w-2.5 h-2.5 bg-indigo-500/20 dark:bg-indigo-400/20 rounded-full animate-float'
			style='animation-delay: 4s;'>
		</div>
		<div
			class='absolute top-2/3 right-1/4 w-1 h-1 bg-purple-500/20 dark:bg-purple-400/20 rounded-full animate-float'
			style='animation-delay: 3s;'>
		</div>
	</div>
</div>

<style>
	@keyframes float-subtle {
		0%,
		100% {
			transform: translateY(0) translateX(0);
		}
		33% {
			transform: translateY(-20px) translateX(10px);
		}
		66% {
			transform: translateY(10px) translateX(-10px);
		}
	}
</style>
