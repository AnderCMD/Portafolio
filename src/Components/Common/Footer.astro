---
// Lenguaje
import { useLocale } from '@/Hooks/useLocale';
const { t } = useLocale(Astro);

// Scripts
import { CurrentYear } from '@/Scripts/CurrentTime';
---

<footer
	class='flex flex-row items-center justify-between w-full gap-4 p-4 border-t-2 border-slate-300 dark:border-slate-600 max-md:flex-col max-md:'>
	<div class='flex items-center gap-4 max-sm:flex-col'>
		<img
			src=''
			alt='Icono Logo AnderCMD'
			id='IconoLogoThemeFooter'
			class='size-8'
		/>
		<h1 class='text-center'>
			<a href='/' class='font-semibold transition-all hover:text-sky-500'
				>AnderCMD</a
			>
			| {t('Footer.Copyright')} 2024 {CurrentYear}
		</h1>
	</div>
	<div class='flex gap-4 text-2xl'>
		<a href='https://www.linkedin.com/in/andercmd/' target='_blank'>
			<i class='transition-all fa-brands fa-linkedin hover:text-sky-500'
			></i>
		</a>
		<a href='https://github.com/AnderCMD' target='_blank'>
			<i class='transition-all fa-brands fa-github hover:text-sky-500'
			></i>
		</a>
		<a href='https://x.com/AnderCMDs' target='_blank'>
			<i class='transition-all fa-brands fa-x-twitter hover:text-sky-500'
			></i>
		</a>
	</div>
</footer>
