---
import { Image } from 'astro:assets';

const TechStack = [
	{
		name: 'HTML',
		icon: 'html5',
	},
	{
		name: 'CSS',
		icon: 'css3',
	},
	{
		name: 'JavaScript',
		icon: 'javascript',
	},
	{
		name: 'TypeScript',
		icon: 'typescript',
	},
	{
		name: 'Python',
		icon: 'python',
	},
	{
		name: 'C#',
		icon: 'csharp',
	},
	{
		name: 'React',
		icon: 'react',
	},
	{
		name: 'Astro',
		icon: 'astro',
		invert: true,
	},
	{
		name: 'Tailwind CSS',
		icon: 'tailwindcss',
	},
	{
		name: 'ExpressJS',
		icon: 'express',
		invert: true,
	},
	{
		name: 'NestJS',
		icon: 'nestjs',
	},
	{
		name: '.Net 8+',
		iconImage: 'https://raw.githubusercontent.com/devicons/devicon/master/icons/dot-net/dot-net-original.svg',
	},
	{
		name: 'MySQL',
		icon: 'mysql',
	},
	{
		name: 'PostgreSQL',
		icon: 'postgresql',
	},
	{
		name: 'SQL Server',
		icon: 'microsoftsqlserver',
	},
	{
		name: 'MongoDB',
		icon: 'mongodb',
	},
	{
		name: 'Git',
		icon: 'git',
	},
	{
		name: 'GitHub',
		icon: 'github',
		invert: true,
	},
	{
		name: 'Docker',
		icon: 'docker',
	},
	{
		name: 'Vercel',
		icon: 'vercel',
		invert: true,
	},
	{
		name: 'AWS',
		icon: 'aws',
		iconImage:
			'https://raw.githubusercontent.com/devicons/devicon/master/icons/amazonwebservices/amazonwebservices-original-wordmark.svg',
	},
	{
		name: 'Azure',
		icon: 'azure',
		iconImage: 'https://raw.githubusercontent.com/devicons/devicon/master/icons/azure/azure-original.svg',
	},
	{
		name: 'Cloudflare',
		icon: 'cloudflare',
		iconImage: 'https://raw.githubusercontent.com/devicons/devicon/master/icons/cloudflare/cloudflare-original.svg',
	},
	{
		name: 'Hostinger',
		icon: 'hostinger',
		iconImage: 'https://cdn.worldvectorlogo.com/logos/hostinger.svg',
	},
];
---

<section
	class='my-8 grid grid-cols-2 gap-6 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-8 animate-fade-in'>
	{
		TechStack.map((tech, index) => (
			<article
				class='group flex flex-col items-center justify-center transition-all duration-300 hover:scale-110 animate-scale-in'
				style={`animation-delay: ${index * 0.05}s`}>
				<div class='relative'>
					<div class='absolute inset-0 bg-linear-to-br from-sky-400/20 to-blue-500/20 dark:from-sky-400/10 dark:to-blue-500/10 blur-xl rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300' />
					<figure class='relative flex items-center justify-center p-4 border-2 rounded-2xl shadow-lg w-20 h-20 bg-white dark:bg-slate-800 border-slate-200 dark:border-slate-700 group-hover:border-sky-400 dark:group-hover:border-sky-500 group-hover:shadow-xl group-hover:shadow-sky-500/20 transition-all duration-300'>
						<Image
							class={`w-10 h-10 object-contain ${tech.invert ? 'dark:invert' : ''} group-hover:scale-110 transition-transform duration-300`}
							src={
								tech.iconImage
									? tech.iconImage
									: `https://raw.githubusercontent.com/devicons/devicon/master/icons/${tech.icon}/${tech.icon}-original.svg`
							}
							alt={`${tech.name} logo`}
							width={40}
							height={40}
							loading='lazy'
							decoding='async'
						/>
					</figure>
				</div>
				<figcaption class='mt-3 text-center text-sm font-semibold text-slate-700 dark:text-slate-200 group-hover:text-sky-600 dark:group-hover:text-sky-400 transition-colors duration-300'>
					{tech.name}
				</figcaption>
			</article>
		))
	}
</section>
