---
interface Props {
	title?: string;
	subtitle?: string;
	variant?: 'default' | 'gradient' | 'glass';
	hoverable?: boolean;
	class?: string;
}

const { title, subtitle, variant = 'default', hoverable = true, class: className = '' } = Astro.props;

const variantClasses = {
	default: 'bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700',
	gradient:
		'bg-gradient-to-br from-sky-50 to-blue-50 dark:from-sky-950/30 dark:to-blue-950/30 border border-sky-200/50 dark:border-sky-700/30',
	glass: 'glass backdrop-blur-lg bg-white/10 dark:bg-slate-900/10 border border-white/20 dark:border-slate-700/20',
};

const hoverClasses = hoverable ? 'transition-all duration-300 hover:scale-[1.02] hover:shadow-xl' : '';
---

<div class={`rounded-2xl p-6 lg:p-8 shadow-lg ${variantClasses[variant]} ${hoverClasses} ${className}`}>
	{
		(title || subtitle) && (
			<div class='mb-6'>
				{title && <h3 class='text-2xl font-bold text-slate-900 dark:text-white mb-2'>{title}</h3>}
				{subtitle && <p class='text-slate-600 dark:text-slate-400'>{subtitle}</p>}
			</div>
		)
	}
	<div class='card-content'>
		<slot />
	</div>
</div>

<style>
	.glass {
		backdrop-filter: blur(10px);
		-webkit-backdrop-filter: blur(10px);
	}
</style>
