---
// Layouts
import Layout from '@/Layouts/Layout.astro';
import Social from '@/Components/Common/Social.astro';
import Text from '@/Components/Common/Text.astro';
import Divisor from '@/Components/Common/Divisor.astro';

// Lenguaje
import { useLocale } from '../../Hooks/useLocale';
const { t } = useLocale(Astro);

// Imagenes
import { Image } from 'astro:assets';
import ContactImagen from '@/Assets/Images/Contact.svg';
---

<Layout
	title={`AnderCMD | ${t('Nav.Contact')}`}
	description={t('Contact.Description')}
	keywords='Contact, Get in Touch, Email, Social Media, LinkedIn, GitHub, Portfolio Contact'>
	<!-- Hero Section -->
	<section
		class='flex items-center justify-center max-xl:flex-col gap-12 lg:gap-20 py-12 lg:py-20 min-h-[50vh] animate-fade-in'>
		<!-- Image with Floating Animation -->
		<div class='relative group animate-float'>
			<div
				class='absolute inset-0 rounded-3xl blur-3xl opacity-20 group-hover:opacity-30 transition-opacity duration-500'>
			</div>
			<div
				class='absolute inset-0 rounded-3xl animate-pulse-slow'>
			</div>
			<Image
				src={ContactImagen}
				alt='Ander GonzÃ¡lez - Contact Illustration'
				class='relative drop-shadow-2xl w-60 h-60 lg:w-72 lg:h-72 rounded-3xl transform group-hover:scale-105 transition-transform duration-500'
			/>
		</div>

		<!-- Text Content -->
		<div class='flex-1 max-w-3xl'>
			<Text
				icon='fa-solid fa-address-book'
				title={t('Contact.Title')}
				subtitle={t('Contact.Subtitle')}
				description={t('Contact.Description')}
			/>
		</div>
	</section>

	<Divisor />

	<!-- Social Links -->
	<section class='py-12 animate-slide-up'>
		<Social />
	</section>

	<!-- Additional Contact Info -->
	<section class='py-12 animate-fade-in'>
		<div class='grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8'>
			<!-- Response Time -->
			<div
				class='group p-6 lg:p-8 rounded-2xl bg-linear-to-br from-emerald-50 to-teal-50 dark:from-emerald-950/30 dark:to-teal-950/30 border border-emerald-200/50 dark:border-emerald-700/30 hover:shadow-xl hover:shadow-emerald-500/10 transition-all duration-300'>
				<div class='flex items-center gap-4 mb-4'>
					<div
						class='w-12 h-12 rounded-xl bg-linear-to-r from-emerald-500 to-teal-500 flex items-center justify-center text-white shadow-lg shadow-emerald-500/30 group-hover:scale-110 transition-transform duration-300'>
						<i class='fa-solid fa-clock text-xl'></i>
					</div>
					<h3 class='text-xl font-bold text-slate-900 dark:text-white'>
						{t('Contact.Info.ResponseTime.Title')}
					</h3>
				</div>
				<p class='text-slate-600 dark:text-slate-300'>{t('Contact.Info.ResponseTime.Description')}</p>
			</div>

			<!-- Availability -->
			<div
				class='group p-6 lg:p-8 rounded-2xl bg-linear-to-br from-sky-50 to-blue-50 dark:from-sky-950/30 dark:to-blue-950/30 border border-sky-200/50 dark:border-sky-700/30 hover:shadow-xl hover:shadow-sky-500/10 transition-all duration-300'>
				<div class='flex items-center gap-4 mb-4'>
					<div
						class='w-12 h-12 rounded-xl bg-linear-to-r from-sky-500 to-blue-500 flex items-center justify-center text-white shadow-lg shadow-sky-500/30 group-hover:scale-110 transition-transform duration-300'>
						<i class='fa-solid fa-calendar-check text-xl'></i>
					</div>
					<h3 class='text-xl font-bold text-slate-900 dark:text-white'>
						{t('Contact.Info.Availability.Title')}
					</h3>
				</div>
				<p class='text-slate-600 dark:text-slate-300'>{t('Contact.Info.Availability.Description')}</p>
			</div>

			<!-- Location -->
			<div
				class='group p-6 lg:p-8 rounded-2xl bg-linear-to-br from-indigo-50 to-purple-50 dark:from-indigo-950/30 dark:to-purple-950/30 border border-indigo-200/50 dark:border-indigo-700/30 hover:shadow-xl hover:shadow-indigo-500/10 transition-all duration-300'>
				<div class='flex items-center gap-4 mb-4'>
					<div
						class='w-12 h-12 rounded-xl bg-linear-to-r from-indigo-500 to-purple-500 flex items-center justify-center text-white shadow-lg shadow-indigo-500/30 group-hover:scale-110 transition-transform duration-300'>
						<i class='fa-solid fa-location-dot text-xl'></i>
					</div>
					<h3 class='text-xl font-bold text-slate-900 dark:text-white'>{t('Contact.Info.Location.Title')}</h3>
				</div>
				<p class='text-slate-600 dark:text-slate-300'>{t('Contact.Info.Location.Description')}</p>
			</div>
		</div>
	</section>
</Layout>
