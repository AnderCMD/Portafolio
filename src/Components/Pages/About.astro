---
// Layouts
import Layout from '@/Layouts/Layout.astro';

// Components
import Text from '@/Components/Common/Text.astro';
import Text2 from '@/Components/Common/Text2.astro';
import WorkExperience from '@/Components/Common/WorkExperience.astro';
import Divisor from '@/Components/Common/Divisor.astro';
import Tech from '@/Components/Common/Tech.astro';
import Social from '@/Components/Common/Social.astro';

// Lenguaje
import { useLocale } from '@/Hooks/useLocale';
const { t } = useLocale(Astro);
---

<Layout
	title={`AnderCMD | ${t('Nav.About')}`}
	description={t('About.Description')}
	type='profile'
	keywords='Ander GonzÃ¡lez, Full Stack Developer, Software Engineer, About Me, Perfil Profesional'>
	<!-- Hero Section - About Me -->
	<section class='flex items-center justify-center max-xl:flex-col gap-12 lg:gap-20 py-12 lg:py-20 min-h-[50vh]'>
		<div class='relative group animate-float'>
			<div
				class='absolute inset-0 bg-linear-to-r from-emerald-400 to-teal-500 rounded-full blur-3xl opacity-20 group-hover:opacity-30 transition-opacity duration-500'>
			</div>
			<img
				data-logo-theme='icono'
				id='IconoLogoTheme'
				alt='AnderCMD Logo'
				class='relative w-56 h-56 lg:w-72 lg:h-72 drop-shadow-2xl transform group-hover:scale-105 transition-transform duration-500 rounded-full will-change-auto'
				loading='eager'
				decoding='async'
				fetchpriority='high'
			/>
		</div>
		<div class='flex-1 max-w-3xl'>
			<Text
				icon=''
				title={t('About.Title')}
				subtitle={t('About.Subtitle')}
				description={t('About.Description')}
			/>
		</div>
	</section>

	<!-- Social Links -->
	<section class='py-8 animate-slide-up'>
		<Social />
	</section>

	<Divisor />

	<!-- Tech Stack Section -->
	<section class='py-12 space-y-8 animate-fade-in'>
		<div class='text-center space-y-4'>
			<Text2
				icon='fa-solid fa-laptop-code'
				title={t('Tech.Title')}
				subtitle=''
				description={t('Tech.Description')}
			/>
		</div>
		<Tech />
	</section>

	<Divisor />

	<!-- Work Experience Section -->
	<section id='experience' class='py-12 space-y-8 animate-fade-in scroll-mt-20'>
		<div class='text-center space-y-4'>
			<Text2
				icon='fa-solid fa-briefcase'
				title={t('WorkExperience.Title')}
				subtitle=''
				description={t('WorkExperience.Description')}
			/>
		</div>
		<WorkExperience />
	</section>
</Layout>
