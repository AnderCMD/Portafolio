---
// Layouts
import Layout from '../../Layouts/Layout.astro';

// Components
import Text from '../Common/Text.astro';
import Text2 from '../Common/Text2.astro';
import Divisor from '../Common/Divisor.astro';
import Project from '../Common/Project.astro';
import WorkExperience from '../Common/WorkExperience.astro';
import Social from '../Common/Social.astro';
import Tech from '../Common/Tech.astro';

// Lenguaje
import { useLocale } from '../../Hooks/useLocale';
const { t } = useLocale(Astro);
---

<Layout title={`AnderCMD | ${t('Nav.Index')}`}>
	<section class='flex items-center max-xl:flex-col gap-20 max-xl:gap-8'>
		<img
			id='IconoLogoTheme'
			src=''
			alt='AnderCMD Logo'
			class='drop-shadow-xl w-3/12 max-lg:w-40 max-lg:h-40'
		/>
		<Text
			icon=''
			title={t('About.Title')}
			subtitle={t('About.Subtitle')}
			description={t('About.Description')}
		/>
	</section>
	<section>
		<Social />
	</section>
	<Divisor />
	<section>
		<Text2
			icon='fa-solid fa-briefcase'
			title={t('WorkExperience.Title')}
			subtitle=''
			description={t('WorkExperience.Description')}
		/>
		<WorkExperience />
	</section>
	<Divisor />
	<section>
		<Text2
			icon='fa-solid fa-laptop-code'
			title={t('Tech.Title')}
			subtitle=''
			description={t('Tech.Description')}
		/>
		<Tech />
	</section>
	<Divisor />
	<section>
		<Text2
			icon='fa-solid fa-diagram-project'
			title={t('Projects.Title')}
			subtitle=''
			description={t('Projects.Description')}
		/>
		<Project />
	</section>
</Layout>
